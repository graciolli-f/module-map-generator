{
  "scan": {
    "extensions": [".js", ".jsx", ".ts", ".tsx", ".css"],
    "respectGitignore": true,
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "coverage",
      ".git",
      ".cursor",
      "temp",
      "docs",
      "test",
      "__tests__",
      "*.test.js",
      "*.spec.js",
      "**/package.json",
      "**/package-lock.json",
      "**/tsconfig.json",
      "**/vite.config.ts",
      "**/tsconfig.node.json",
      "**/test-suite.ts",
      "**/*.config.ts",
      "**/test-suite.ts",
      "**/test*.ts"
    ]
  },
  "analysis": {
    "detectHighCoupling": {
      "enabled": true,
      "threshold": 7
    }
  },
  "rules": {
    "ignoredExports": {
      "**/*.config.js": ["*"],
      "**/*.test.js": ["mock*", "test*"],
      "src/index.js": ["*"]
    },
    "publicApiPaths": [
      "src/index.js",
      "src/api/*",
      "lib/*"
    ]
  },
  "output": {
    "console": {
      "maxIssuesShown": 3
    }
  }
}