{
  "scan": {
    "extensions": [".js", ".jsx", ".ts", ".tsx", ".css"],
    "respectGitignore": true,
    "dataExtensions": [".json", ".yaml", ".yml"],
    "ignoreTestFiles": true,
    "testPatterns": [
      "*.test.js",
      "*.test.jsx",
      "*.test.ts",
      "*.test.tsx",
      "*.spec.js",
      "*.spec.jsx",
      "*.spec.ts",
      "*.spec.tsx",
      "**/test/**",
      "**/tests/**",
      "**/__tests__/**",
      "**/test-*.js",
      "**/test-*.jsx",
      "**/test-*.ts",
      "**/test-*.tsx",
      "**/*-test.js",
      "**/*-test.jsx",
      "**/*-test.ts",
      "**/*-test.tsx"
    ],
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "coverage",
      ".git",
      ".cursor",
      "temp",
      "docs",
      "test",
      "__tests__",
      "*.test.js",
      "*.spec.js",
      "**/package.json",
      "**/package-lock.json",
      "**/tsconfig.json",
      "**/vite.config.ts",
      "**/tsconfig.node.json",
      "**/test-suite.ts",
      "**/*.config.ts",
      "**/test-suite.ts",
      "**/test*.ts",
      "**/test*.js",
      "**/test*.jsx"
    ]
  },
  "analysis": {
    "detectHighCoupling": {
      "enabled": true,
      "threshold": 7,
      "excludePatterns": ["**/index.js", "**/index.ts", "**/index.jsx", "**/index.tsx"]
    },
    "includeExternalDependencies": false
  },
  "rules": {
    "ignoredExports": {
      "**/*.config.js": ["*"],
      "**/*.test.js": ["mock*", "test*"],
      "src/index.js": ["*"]
    },
    "publicApiPaths": [
      "src/index.js",
      "src/api/*",
      "lib/*"
    ],
    "entryPointPaths": [
      "**/custom-mcp-servers/*/src/index.js",
      "**/src/server/routes/*.ts",
      "**/src/utils/*Manager.ts",
      "scripts/*.js",
      "tools/*.js"
    ]
  },
  "output": {
    "console": {
      "maxIssuesShown": 3
    }
  }
}