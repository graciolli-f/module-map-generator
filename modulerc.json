{
    "scan": {
      "exclude": ["node_modules", "dist", "/test/*", ".git", ".cursor", "/temp/*", "/docs/*" ],
      "extensions": [".js", ".jsx"]
    },
    "analysis": {
      "detectHighCoupling": {
        "enabled": true,
        "threshold": 7
      }
    },
    "rules": {
      "ignoredExports": {
        "**/*.config.js": ["*"],
        "**/*.test.js": ["mock*", "test*"],
        "src/index.js": ["*"]
      },
      "publicApiPaths": [
        "src/index.js",
        "src/api/*",
        "lib/*"
      ]
    },
    "output": {
      "console": {
        "maxIssuesShown": 3
      }
    }
  }